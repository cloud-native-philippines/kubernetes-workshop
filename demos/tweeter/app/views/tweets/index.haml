%p#notice= notice
%h1 Tweets
%table
  %thead
    %tr
      %th Handle
      %th Content
      %th Created at
      %th{:colspan => "3"}
  %tbody
    - @tweets.each do |tweet|
      %tr
        %td= tweet.handle
        %td= tweet.content
        %td= tweet.created_at
        %td= link_to 'Show', tweet
        %td= link_to 'Edit', edit_tweet_path(tweet)
        %td= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Tweet', new_tweet_path
