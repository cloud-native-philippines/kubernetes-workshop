= form_for(tweet) do |f|
  - if tweet.errors.any?
    #error_explanation
      %h2
        = pluralize(tweet.errors.count, 'error')
        prohibited this tweet from being saved:
      %ul
        - tweet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :handle
    = f.text_field :handle
  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit
